{% extends 'baseAdmin.html.twig' %}

{% block title %}Portail Administrateur{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="{{asset('styles/css/menuAdmin.css')}}">
{% endblock %}

{% block body %}

<section class="espaceMusique">
  <h2>Espace Musique</h2>

  <figure>
    <img src="{{asset('img/babyTux.png')}}" alt="BabyTux" class="babyTux"/>
  </figure>

  <div class="menuMusique">
    <button class="btnAdmin">
      <a href="{{path('addMusique')}}">Ajouter une musique</a>
    </button>
    <button class="btnAdmin">
      <a href="{{path('listMusique')}}">Modifier une musique</a>
    </button>
    <button class="btnAdmin">
