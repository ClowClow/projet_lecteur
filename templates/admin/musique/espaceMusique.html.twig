    </button>
    <br/>
    <button class="btnAdmin">
      <a href="{{path('addAlbum')}}">Ajouter un album</a>
    </button>
    <button class="btnAdmin">
      <a href="{{path('listAlbum')}}">Modifier un album</a>
    </button>
    <button class="btnAdmin">
      <a href="{{path('removeAlbum')}}">Supprimer un album</a>
    </button>
  </div>
</section>

{% endblock %}
